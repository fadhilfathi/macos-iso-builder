name: Release v1.0.0

on:
  workflow_run:
    workflows: ["Build"]   # ðŸ‘ˆ MUST match build workflow name exactly
    types:
      - completed

permissions:
  contents: write          # ðŸ‘ˆ REQUIRED for gh release create

jobs:
  release:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest

    steps:
      - name: Download build artifact
        uses: actions/download-artifact@v4
        with:
          name: macos-iso          # ðŸ‘ˆ must match upload-artifact name
          path: ./release-artifact

      - name: Create GitHub Release and upload ISO
        env:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        run: |
          gh release create v1.0.0 ./release-artifact/*.iso \
            --title "v1.0.0" \
            --notes "Automated macOS ISO release" \
            --latest || \
          gh release upload v1.0.0 ./release-artifact/*.iso --clobber
